<article>
  <header>
    <h1><%= @project.name %></h1>
  </header>
  <p>
    <%= @project.description %>
  </p>
  <h3>Target Pledge</h3>
  <p>
    <%= number_to_currency(@project.target_pledge_amount) %>
  </p>
  <h3>Pledging Ends</h3>
  <p>
    <%= format_pledge_date(@project) %>
  </p>
  <h3>Website</h3>
  <p>
    <%= @project.website %>
  </p>
</article>
<%= link_to "All Projects", projects_url %>
