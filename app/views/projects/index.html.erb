<h1><%= pluralize(@projects.size, 'Project') %></h1>

<% @projects.each do |project| %>
<article>
  <header>
    <%= project.name %>
  </header>
  <p>
    <%= truncate(project.description, length: 35, seperator: ' ') %>
  </p>
  <table>
    <tr>
      <th>
        Target Pledge
      </th>
      <td>
        <%= number_to_currency(project.target_pledge_amount) %>
      </td>
    </tr>
    <tr>
      <th>
        End Date
      </th>
      <td>
        <%= project.pledging_ends_on %>
      </td>
    </tr>
    <tr>
      <th>
        Website
      </th>
      <td>
        <%= project.website %>
      </td>
    </tr>
  </table>
</article>
<% end %>
